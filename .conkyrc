conky.config = {
    double_buffer = true,
    alignment = 'top_right',
    background = false,
    border_width = 1,
    cpu_avg_samples = 2,
    default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    use_xft = true,
    font = 'DejaVu Sans Mono:size=10',
    gap_x = 5,
    gap_y = 5,
    minimum_height = 5,
    minimum_width = 5,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_ncurses = false,
    out_to_stderr = false,
    out_to_x = true,
    extra_newline = false,
    own_window = true,
    own_window_class = 'Conky',
    own_window_transparent = true,
    own_window_argb_visual = true,
    own_window_type = 'desktop',
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    show_graph_scale = false,
    show_graph_range = false
}

conky.text = [[
${color grey}$nodename
$color$sysname $kernel on $machine
$hr

${color grey}Uptime:$color $uptime

${color grey}Battery:$color ${battery_percent BAT1}%
${battery_bar 8 BAT1}

${color grey}RAM Usage:$color $mem/$memmax - $memperc%
${membar 8}

${color grey}Swap Usage:$color $swap/$swapmax - $swapperc%
${swapbar 8}

${color grey}CPU Usage:$color $cpu%
 $freq MHz / $freq_g GHz
${cpubar 8}

${color grey}File systems:
 / $color${fs_used /}/${fs_size /}
${fs_bar 8 /}

${color grey}Networking:
 ${color grey}wlp1s0 $color${addr wlp1s0}$alignr
 ${color grey}enp3s0 $color${addr enp3s0}$alignr

${color grey}Processes:          PID   CPU%   MEM%
$color ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
$color ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
$color ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
$color ${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
]]
